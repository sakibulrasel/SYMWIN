<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/unsoldSingleRow"
        android:layout_width="match_parent"
        android:background="@color/colorlogin_background"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/model_name"
            android:text="Model No"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/soldQuantity"
            android:text="Quantity"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_toRightOf="@+id/model_name"
            android:layout_marginTop="6dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/unsoldSingleRow"
        android:layout_width="match_parent"
        android:layout_height=".1dp"
        android:background="#F10152" />

</RelativeLayout>